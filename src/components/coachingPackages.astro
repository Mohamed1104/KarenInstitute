---
import CardSingleSession from "../components/cardSingleSession.astro";
import CardThreeSessionPackage from "../components/cardThreeSessionPackage.astro";
import CardSixSessionPackage from "../components/cardSixSessionPackage.astro";
---

<div
  class="flex flex-col justify-center items-center h-screen bg-gradient-to-b from-gray-900 to-black border-b-8 border-b-orange-400 text-white text-center"
>
  <section class="w-8/12 flex flex-col items-center h-1/4 space-y-3">
    <h1 class="text-center">Coaching Packages</h1>
    <p class="text-center">
      Choose from individual coaching sessions and packages of 1, 3, or 6
      sessions, as well as tailored, on-site coaching for individuals or group
      workshops. All sessions include a free initial 30-minute consultation
      call.
    </p>
  </section>
  <section class="flex space-x-5">
    <CardSingleSession />
    <CardThreeSessionPackage />
    <CardSixSessionPackage />
  </section>
</div>
