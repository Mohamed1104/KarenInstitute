---
import map from "../map.png";
---

<div class="h-screen flex items-center">
  <div class="w-1/2 h-full">
    <img src={map}  class="h-full w-full"/>
  </div>
  <div class="w-1/2 h-full flex flex-col justify-center items-center">
    <form class="flex space-x-20">
      <div class="flex flex-col space-y-1">
        <label class="text-sm" for="name">Your name</label>
        <input id="name" type="text" class="text-md border-b-2 pb-2 focus:border-purple focus:outline-none"/>
      </div>
      <div class="flex flex-col space-y-1">
        <label class="text-sm text-black" for="email">Your email</label>
        <input id="email" type="email" class="text-md border-b-2 pb-2 focus:border-purple focus:outline-none"/>
      </div>
    </form>
  </div>
</div>

