---
import logo from "/footer-logo.svg";
import facebook from "/facebook.svg";
import twitter from "/twitter.svg";
import instagram from "/instagram.svg";
---

<footer
    class="flex flex-wrap lg:flex-nowrap justify-center lg:justify-between bg-footer-color lg:px-32 py-2 items-center text-white"
>
    <div class="flex items-center overflow-hidden h-20 md:mr-4 lg:mr-0">
        <img src={logo} alt="logo" />
    </div>
    <div>
        <div class="flex justify-center gap-10">
            <div class="flex gap-6">
                <img src={facebook} alt="facebook link" />
                <img src={twitter} alt="twitter link" />
                <img src={instagram} alt="instagram link" />
            </div>
            <div class="border-solid border-l-2 border-white h-12 hidden lg:block"></div>
            <div class="flex flex-col text-center gap-2">
                <p
                    class="font-medium text-xxs underline decoration-primary-accent decoration-4 underline-offset-4"
                >
                    07831 443448
                </p>
                <p class="font-semibold text-xs">info@ka-thecoach.co.uk</p>
            </div>
        </div>
    </div>
    <p class="font-semibold my-4 md:mx-4 lg:mx-0 lg:mt-0 text-xs">Copyright Â© 2023 All rights reserved.</p>
</footer>
