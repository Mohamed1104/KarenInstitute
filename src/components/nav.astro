---
import logo from "/logo.svg";
import NavItem from "./NavItem.astro";
import HamburgerMenu from "./HamburgerMenu.astro";
---

<header
    class="flex justify-between px-4 lg:px-32 py-2 lg:py-6 w-full fixed top-0 z-50 bg-white border-b-2 border-solid border-secondary-accent lg:border-none"
>
    <div class="w-1/3 flex items-start">
        <img class="self-start justify-self-start h-12" src={logo} alt="logo" />
    </div>
    <nav
        class="flex gap-6 lg:gap-8 items-center text-sm lg:text-lg text-grey-text font-semibold"
    >
        <NavItem href="/" title="Home" />
        <NavItem href="/about" title="About" />
        <NavItem href="/services" title="Services" />
        <NavItem href="/#testimonials" title="Testimonials" />
        <NavItem href="/blog" title="Blog" />
        <HamburgerMenu/>
        <a
            class="font-medium bg-black hover:bg-secondary-accent focus:bg-secondary-accent transition ease-in-out delay-75 text-white px-4 py-2 rounded-lg hidden md:flex md:w-32 lg:text-lg lg:w-52 justify-center"
            href="/getInTouch">Get in touch</a
        >
    </nav>
</header>
