---
import ContactForm from "../layouts/ContactForm.astro";
import phoneIcon from "../phoneIcon.svg";
import emailIcon from "../emailIcon.svg";
import locationIcon from "../locationIcon.svg";
import SiteLayout from '../layout/SiteLayout.astro';
---

<SiteLayout id="contact-page">
    <div
      class="flex flex-col items-center justify-center md:flex-row md:space-x-20 md:h-full mt-20 lg:mt-14 py-4"
    >
      <div
        class="flex flex-col sm:flex-row md:flex-col w-11/12 space-y-5 sm:space-y-0 sm:space-x-5 md:space-x-0 md:w-5/12 lg:w-4/12 md:px-20 text-custom-gray text-lg md:space-y-16 md:border-r-4 border-purple"
      >
        <div class="flex items-start space-x-5 text-left sm:w-1/3 md:w-auto">
          <img src={phoneIcon} alt="phone" />
          <div class="flex flex-col space-y-1">
            <h1 class="font-semibold text-xl lg:text-2xl text-black_background">
              Telephone
            </h1>
            <p class="font-medium text-paragraphSize whitespace-nowrap">
              07831 443448
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-5 text-left sm:w-1/3 md:w-auto">
          <img src={emailIcon} alt="email" />
          <div class="flex flex-col space-y-1">
            <h1 class="font-semibold text-xl lg:text-2xl text-black_background">
              Email
            </h1>
            <p class="font-medium text-paragraphSize md:whitespace-nowrap">
              info@ka-thecoach.co.uk
            </p>
          </div>
        </div>
        <div class="flex items-start space-x-5 text-left sm:w-1/3 md:w-auto">
          <img src={locationIcon} alt="location" />
          <div class="flex flex-col space-y-1">
            <h1 class="font-semibold text-xl lg:text-2xl text-black_background">
              Location
            </h1>
            <p class="font-medium text-paragraphSize">
              4 North Ythsie <br class="hidden md:block" />By Tarves Ellon <br
                class="hidden sm:block"
              />Aberdeenshire <br class="hidden md:block" /><span
                class="whitespace-nowrap">AB41 4LS</span
              >
            </p>
          </div>
        </div>
      </div>
      <ContactForm />
    </div>
</SiteLayout>

<style>
  #contact-page {
  height: 100vh !important;
  }
</style>