---
export interface Props {
    h1:string;
}
const {h1} = Astro.props;
---
<div class="relative lg:flex lg:flex-col lg:rounded-3xl lg:bg-white lg:w-1/3 lg:px-7 lg:py-12">
    <h1 class=" lg:text-black lg:space-y-2 lg:text-left lg:font-bold text-2xl lg:pb-1 lg:h-1/6">{h1}</h1>
    <ul class="lg:flex lg:flex-col lg:space-y-2 lg:text-custom-gray lg:text-left lg:text-lg lg:font-semibold">
        <slot/>
    </ul>
</div>