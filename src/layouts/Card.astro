---
export interface Props {
    h1:string;
}
const {h1} = Astro.props;
---
<div class="relative bg-white rounded-lg px-4 py-10 sm:rounded-xl md:flex md:flex-col md:w-1/3 md:px-7 md:max-w-lg md:py-12 md:pb-16 md:rounded-2xl lg:pb-20 lg:rounded-3xl ">
    <h1 class="text-black text-left text-md font-bold sm:text-lg md:h-1/5 lg:text-2xl ">{h1}</h1>
    <ul class="text-left text-custom-gray text-sm font-semibold space-y-1 sm:text-base md:h-4/5 md:flex md:flex-col md:space-y-2 lg:text-lg ">
        <slot/>
    </ul>
</div>